<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="11111" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2222" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="3333" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="4444" />

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:stretchColumns="3">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageButton
                style="@style/TableRow_Item_ImageButton"
                android:src="@drawable/umeng_addtags" />

            <ImageButton
                style="@style/TableRow_Item_ImageButton"
                android:src="@drawable/umeng_delettags" />

            <ImageButton
                style="@style/TableRow_Item_ImageButton"
                android:src="@drawable/umeng_listtags" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageButton
                style="@style/TableRow_Item_ImageButton"
                android:src="@drawable/umeng_addalias" />

            <ImageButton
                style="@style/TableRow_Item_ImageButton"
                android:src="@drawable/umeng_aliastype" />

            <ImageButton
                style="@style/TableRow_Item_ImageButton"
                android:src="@drawable/umeng_exclalias" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageButton
                style="@style/TableRow_Item_ImageButton"
                android:src="@drawable/umeng_deletalias" />

            <ImageButton
                style="@style/TableRow_Item_ImageButton"
                android:src="@drawable/umeng_serialnet" />

            <ImageButton
                style="@style/TableRow_Item_ImageButton"
                android:src="@drawable/umeng_appinfo" />
        </TableRow>

    </TableLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <ImageView
            android:id="@+id/iv_screen_fit"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/income_clicked" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/iv_screen_fit"
            android:gravity="center"
            android:text="5555" />

    </RelativeLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.thinkive.bank.screenfit">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- android:configChanges="locale"  捕捉local的变化 -->
        <activity
            android:name=".MainActivity"
            android:configChanges="locale">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".TestActivity" />
        <activity android:name=".LandPortActivity" />
        <activity
            android:name=".PropertyActivity"
            android:theme="@style/NoActionBar" />
        <activity android:name=".PercentFrameActivity" />
        <activity android:name=".PercentRelativeActivity" />
        <activity android:name=".PercentLinearActivity"></activity>
    </application>

</manifest>
